{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "./src", // 源码目录
        "outDir": "./dist", 
        "noEmit": true,
        "types": [
            "vite/client"
        ],
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@olympus-ui/*": [
                "../../packages/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../packages"
        }
    ]
}
